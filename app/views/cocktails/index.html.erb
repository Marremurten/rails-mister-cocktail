
<div class="container ">
  <div class="jumbotron text-center" style="">
    <h1 class="deepshd"> Cocktails</h1>
  </div>

  <div class="d-flex flex-wrap p-3 justify-content-center">
    <% @cocktails.each do |cocktail| %>


    <div class="card m-2" style="width: 20rem;">
      <div class="card-img-caption">
        <p class="card-text"><%= link_to cocktail.name , cocktail_path(cocktail)  %></p>
          <img class="card-img-top" src="https://static.thatsup.co/content/img/article/18/jan/s%C3%B6dermalms-b%C3%A4sta-barer.jpg alt="Card image cap">
      </div>
    </div>
    <% end %>
  </div>

  <div class="text-center">
    <p class="text-danger"><%= link_to "Add new cocktail" , new_cocktail_path %>
  </div>


</div>

